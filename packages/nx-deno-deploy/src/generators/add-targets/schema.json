{
    "$schema": "http://json-schema.org/schema",
    "cli": "nx",
    "$id": "AddDeployTarget",
    "title": "",
    "type": "object",
    "properties": {
        "appName": {
            "type": "string",
            "description": "Name of the project to add deno deploy to",
            "$default": {
                "$source": "argv",
                "index": 0
            }
        },
        "denoProject": {
            "type": "string",
            "description": "Name of the Deno project (if this differs from the appName)",
            "default": ""
        },
        "mainFile": {
            "type": "string",
            "default": "main.ts"
        }
    },
    "required": ["appName", "mainFile"]
}
